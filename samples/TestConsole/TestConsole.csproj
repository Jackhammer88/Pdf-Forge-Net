<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
        <PublishAot>true</PublishAot>
        <RuntimeIdentifier>linux-x64</RuntimeIdentifier>  <!-- Для Linux -->
        <SelfContained>true</SelfContained>               <!-- Для полной автономности -->
        <StripSymbols>true</StripSymbols>                 <!-- Уменьшение размера -->
        <InvariantGlobalization>true</InvariantGlobalization> <!-- Ускорение работы с текстом -->
    </PropertyGroup>

    <ItemGroup>
      <None Update="test.pdf">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
      <None Update="test.pdf">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
    </ItemGroup>

    <ItemGroup>
      <Content Include="..\.dockerignore">
        <Link>.dockerignore</Link>
      </Content>
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\..\PdfForge\PdfForge.csproj" />
    </ItemGroup>

</Project>
